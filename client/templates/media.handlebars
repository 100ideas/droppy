<div class="arrow-back">{{{svg "arrow"}}}</div>
<div class="arrow-forward">{{{svg "arrow"}}}</div>
<div class="meta">
  <span class="counter">
    <span class="cur"></span>/<span class="max"></span>
  </span>
  <span class="dims"> - <span class="x"></span>x<span class="y"></span></span>
  <button class="fs tip tip-nw" aria-label="Toggle Fullscreen">{{{svg "fullscreen"}}}</button>
</div>
<figure class="media-container">
  {{#is type "image"}}
    <img src="{{src}}">
  {{else}}
    <video id="video-{{vid}}" src="{{src}}"></video>
  {{/is}}
</figure>
